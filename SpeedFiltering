import arcpy

inpath = r"E:\0Val_Local\Phase2DataCleaning\3_Filt1_DuplicatesRemoved_SpeedKMPH\KRST.gdb" #**********CHANGE FOR EACH RUN
arcpy.env.workspace = inpath
arcpy.env.overwriteOutput = True

outpath = "E:/0Val_Local/Phase2DataCleaning/6_SpeedFiltered_PointsData/KRST.gdb/" #**********CHANGE FOR EACH RUN

fcs = arcpy.ListFeatureClasses() #This lists the feature classes within a gdb so that they can be speed filtered

for fc in fcs:
    if 'DATEONLY' not in fc and 'NULLGEOM' not in fc:
        print fc
        arcpy.MakeFeatureLayer_management(fc,'FL')
        arcpy.SelectLayerByAttribute_management("FL",'NEW_SELECTION','OBJECTID=1 OR SpeedKMPH<2.5')#**********CHANGE FOR EACH RUN
        arcpy.CopyFeatures_management('FL',outpath+fc)

print 'code completed for input files from: '+inpath
print 'output files are stored at: '+outpath
print 'input files:' + str(len(fcs))
arcpy.env.workspace = outpath
fcs2 = arcpy.ListFeatureClasses()
print 'output files:' + str(len(fcs2))
if str(len(fcs)) == str(len(fcs2)):
    print 'yes, same amount of input files as output files'
else:
    print 'no, different amount of input and output files'
